{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],    
    "typeRoots": ["@types", "packages/common/types", "node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "baseUrl": "./src",
    "jsx": "react-native"
  },
  "include": [
    "src/**/*"
  ]
}